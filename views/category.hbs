<script>
  //giữ lại địa chỉ sort (sort cùng lúc category, brand, color)
  let ulrparams = new URLSearchParams(location.search);
  let params = {
    //khởi tạo mặc định
    category: 0,
    brand: 0,
    color: 0,
    min: 0,
    max: 100,
    limit: 9,
    page: 1,
    sort: 'name',
    search: ''
  };
  //vòng lặp đảm bảo category, brand, color luôn xuất hiện, cái nào ko có thì set mặc định
  for (let key in params) {
    if (!ulrparams.has(key)) {
      ulrparams.append(key, params[key]);
    }
  }
  $(document).ready(() => {
    //lưu lại control do người dùng click vào
    //thiết lập trạng thái cho các checkbox của browse và filter
    let checkbox = ['category', 'brand', 'color'];
    for (let key of checkbox) {
      let control = $(`#${key}${ulrparams.get(key)}`);
      if (control) {
        $(control).prop(`checked`, true);
      }
    }
    
    //lưu lại sort và limit do người dùng click vào
    //thiết lập trạng thái cho combobox:  search và limit
    $('#sort').val(ulrparams.get('sort'));  //set theo id="sort"
    $('#limit').val(ulrparams.get('limit'));  //id="limit"
    
    //gán tên class cho thanh phân trang để sử dụng mẫu bootstrap mặc định (set id="pagination để gọi")
    //thiết lập trang thái và href cho phân trang
    $('#pagination li').addClass('page-item');
    $('#pagination li a').addClass('page-link');
    
    //biến savePage để lưu lại số page cũ mỗi khi load lại trang
    let savePage = ulrparams.get('page');
    $('#pagination li a').each((index, item) => {
      // href="/products?page=2"
      // lấy ra số 2 (page)
      let page = $(item).attr('href').split('=')[1];
      ulrparams.set('page', page);
      let href = '/products?' + ulrparams.toString();
      $(item).attr('href', href);
    });
    ulrparams.set('page', savePage);
  });

  //cho ta lấy các tham số trong đường URL 
  //do category là option dạng browse nên phải reset
  function selectParam(key, value, reret = false) {
    if (reret) {
      for (let key in params) {
        ulrparams.set(key, params[key]); //chạy đảm bảo
      }
    }
    ulrparams.set(key, value);
    let url = `/products?${ulrparams.toString()}`;
    location.href = url;
  }
</script>