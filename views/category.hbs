            </select>
          </div>
          <form action="/products" method="GET">
            <div class="input-group filter-bar-search">
              <input type="text" name="search" placeholder="Search">
              <div class="input-group-append">
                <button type="submit"><i class="ti-search"></i></button>
              </div>
            </div>
          </form>
        </div>
        <!-- End Filter Bar -->
