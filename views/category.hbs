        <section class="lattest-product-area pb-40 category-list">
          <div class="row">
            {{#each products}}
            <div class="col-md-6 col-lg-4">
              {{>product}}
            </div>
            {{/each}}
          </div>
          <div class="row justify-content-center">
            <nav id="pagination">
              {{{createPagination pagination paginationClass="pagination" }}}
