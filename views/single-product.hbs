	<script>
		// lần đầu load trang web hidden button close label Reply
		$(document).ready(()=>{
			resetStars();
			$('.close').hide();
			$('#star-list i').on('click', checkStars);

			// Tạo hiệu ứng Hover
			$('#star-list i').on('mouseover', highlightStars);
			$('#star-list i').on('mouseout', resetStars);
		})
		// hiển thị thông tin của comment cha
		function showReply(parentCommentId, fullname) {
			$('.close').show()
			$('#reply').html('Reply '+ fullname);
			$('#parentCommentId').val(parentCommentId);
		}
		// xóa thông tin comment
		function removeReply(){
			$('.close').hide()
			$('#reply').html(null);
			$('#parentCommentId').val('');
		}
		function checkStars(){
			let rating = getRating(this);
			showStars(rating)
			$('#rating').val(rating);				// lưu lại giá trị rating
		}

		function highlightStars(){
			let rating = getRating(this);
			showStars(rating)
		}

		function resetStars(){
			let rating = $('#rating').val();
			showStars(rating)
		}

		function getRating(star){
			let stars = $('#star-list i');
			let i;
			for(i=0; i<5; i++){
				if($(stars[i]).get(0) == star){	// star thứ i đang được chọn
					return i+1;								// gán giá trị rating
				}
			}
			return i;
		}

		function showStars(rating){
			let stars = $('#star-list i');
			// thêm class disable vào
			for(let i=0; i<5; i++){
				$(stars[i]).removeClass('disabled');
			}
			for(let i=rating; i<5; i++){
				$(stars[i]).addClass('disabled')
			}

			// tạo 5 cấp độ cho star
			let starNames = ['Please rating this product!','Worst', 'Bad', 'OK', 'Good', 'Outstanding']
			$('#starName').html(starNames[rating])
		}
	</script>